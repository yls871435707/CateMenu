<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:alpha="0.7"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"

            android:background="@drawable/login_editext_phone_bg"
            android:drawableLeft="@mipmap/login_phone"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="电话号码"
            android:paddingBottom="9dp"
            android:paddingLeft="10dp"
            android:paddingTop="9dp"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:alpha="0.7"
            android:background="@drawable/login_editext_phone_bg"
            android:drawableLeft="@mipmap/login_password"
            android:drawablePadding="8dp"
            android:drawableRight="@mipmap/login_eye"
            android:gravity="center_vertical"
            android:hint="密码"
            android:paddingBottom="9dp"
            android:paddingLeft="10dp"
            android:paddingTop="9dp"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:alpha="0.7"
            android:background="@drawable/login_editext_phone_bg"
            android:drawableLeft="@mipmap/login_password"
            android:drawablePadding="8dp"
            android:drawableRight="@mipmap/login_eye"
            android:gravity="center_vertical"
            android:hint="确认密码"
            android:paddingBottom="9dp"
            android:paddingLeft="10dp"
            android:paddingTop="9dp"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:alpha="0.7"
            android:background="@drawable/login_editext_phone_bg"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:drawableLeft="@mipmap/register_authcode"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:hint="验证码"
                android:paddingBottom="9dp"
                android:paddingLeft="10dp"
                android:paddingTop="9dp"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/register_authcode_bg"
                android:text="获取验证码"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_btn_bg"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>